{% extends "layout.njk" %}

{% set page = 'concert-page' %}

{% block content %}
    <div class="page-concert__container container">
        <div class="page-concert__row row no-gutters-fluid">
            <div class="page-concert__col-about">
                <div class="carousel slide" data-ride="carousel1">
                    <ol class="carousel-indicators page-concert__slider-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="page-concert__image d-block w-100" src="assets/imgs/concert-page-placeholder.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="page-concert__image d-block w-100" src="assets/imgs/concert-page-placeholder.jpg"
                                 alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="page-concert__image d-block w-100" src="assets/imgs/concert-page-placeholder.jpg" alt="Third slide">
                        </div>
                    </div>
                </div>
                <div class="page-concert__about bg-white text-dark">
                    <div class="container">
                        <div class="row">
                            <p class="page-concert__about-text h2 col-4 text-center text-transform-none">
                                The Vintage Caravan are a rock band from Álftanes, Iceland. The band was formed in 2006
                                by Óskar Logi Ágústsson and Guðjón Reynisson before bassist Alexander Örn Númason joined
                                after the first studio album.
                            </p>
                        </div>
                    </div>
                </div>
                <video class="page-concert__video bg-white" controls="controls"
                       poster="assets/imgs/concert-page-video-placeholder.jpg">
                    <source src="//ned4ded.github.io/array.io-landing-v-2/www/assets/client-video.mp4"
                            type="video/mp4; codecs=&quot;avc1.42E01E, mp4a.40.2&quot;">
                    Video tag doesn't support by your browser
                </video>
            </div>

            <div class="col-md-2 col-4" style="padding-left: 12px">
                <div class="container h-100">
                    <div class="row h-100">
                        <div class="col-4 page-concert__board">
                            <div class="concert-board">
                                <h1 class="concert-board__heading">The vintage caravan</h1>
                                <p class="concert-board__block concert-board__block--badges">
                                    <span class="badge badge-outline-primary">Metal</span>
                                    <span class="badge badge-outline-primary">Folk</span>
                                </p>
                                <p class="concert-board__block concert-board__block--about">
                                    <a href="#" class="concert-board__city">
                                        Saint-Petersburg ↓
                                    </a>

                                    <span class="concert-board__date">Sept 24, 19:00</span>
                                    <span class="concert-board__place">Zil Arena</span>
                                </p>
                                <form action="/" class="concert-board__form mt-2">
                                    <label class="concert-board__label label-container">
                                        <input type="radio" class="radio concert-board__radio" name="ticket-type">
                                        <span class="radio__name">parter</span>
                                    </label>
                                    <label class="concert-board__label label-container">
                                        <input type="radio" class="radio concert-board__radio" name="ticket-type">
                                        <span class="radio__name">vip</span>
                                    </label>
                                    <a href="#" class="concert-board__ticket-count"> 1 ↓ </a>
                                    <p class="concert-board__price">Price: $80</p>
                                </form>
                                <p class="concert-board__block concert-board__block--buttons text-right">
                                    <a href="#" class="badge badge-primary badge-spread">
                                        <span class="concert-board__play">►</span>Audio preview</a>
                                    <a href="#" class="badge badge-contrast badge-spread js-checkout-modal-open">Buy
                                        ticket</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 page-concert__about-duplicate">
                <div class="container">
                    <div class="row">
                        <p class="page-concert__about-text h2 col-4 text-center text-transform-none">
                            The Vintage Caravan are a rock band from Álftanes, Iceland. The band was formed in 2006
                            by Óskar Logi Ágústsson and Guðjón Reynisson before bassist Alexander Örn Númason joined
                            after the first studio album.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        {% include "partials/newsletter.njk" %}
        {% include "partials/checkout-modal.njk" %}
    </div>

{% endblock %}
