{% extends "layout.njk" %}

{% block content %}
  <div class="container pt-7 pb-7">
    <div class="row">
      <div class="col-4">
        <div class="box">
          <div class="box__content">
            <h1>Checkout</h1>
          </div>
        </div>
      </div>

      <div class="col-2">
        <div class="box">
          <div class="box__content mb-5">
            <div class="cart">
              <div class="cart__imgs">
                <div class="cart__img cart__img--wide" style="background-image: url('assets/imgs/concert-card-img-1.jpg');"></div>
              </div>
              <div class="cart__info">
                <p class="cart__name">Dir En Grey</p>

                <ul class="cart__about">
                  <li class="cart__date">19.05</li>
                  <li class="cart__type">VIP</li>
                  <li class="cart__price">5000 руб</li>
                </ul>
              </div>
            </div>
          </div>
          <div class="box__content mb-3">
            <div class="cart">
              <div class="cart__imgs">
                <div class="cart__img" style="background-image: url('assets/imgs/concert-card-img-1.jpg');"></div>
                <div class="cart__img" style="background-image: url('assets/imgs/concert-card-img-1.jpg');"></div>
                <div class="cart__img" style="background-image: url('assets/imgs/concert-card-img-1.jpg');"></div>
              </div>
              <div class="cart__info">
                <p class="cart__name">Dir En Grey</p>

                <ul class="cart__about">
                  <li class="cart__date">19.05</li>
                  <li class="cart__type">VIP</li>
                  <li class="cart__price">5000 руб</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <p></p>
      </div>

      <div class="col-2">
        <div class="box box--no-borders mt-1">
          <div class="box__content">
            <form action="/">
              <div class="form-group mb-4">
                <label class="w-100">
                  <input type="text" class="form-control" placeholder="Имя">
                </label>
                <label class="w-100">
                  <input type="text" class="form-control" placeholder="Телефон">
                </label>
                <label class="w-100">
                  <input type="email" class="form-control" placeholder="Email">
                </label>
              </div>

              <div class="form-group form-check mb-7">
                <label class="w-100 form-check-label">
                  <input type="checkbox" class="form-check-input"> подписаться на рассылку
                </label>
              </div>

              <div class="form-group mb-6">
                <label class="w-100">
                  <input type="text" class="form-control" placeholder="0000 0000 0000 0000">
                </label>
                <label class="w-100">
                  <input type="text" class="form-control" placeholder="IVAN IVANOV">
                </label>
                <label class="w-25">
                  <input type="text" class="form-control" placeholder="01">
                </label>
                <label class="w-25">
                  <input type="text" class="form-control" placeholder="19">
                </label>
                <label class="w-25">
                  <input type="text" class="form-control" placeholder="***">
                </label>
              </div>

              <div class="form-group">
                <small class="form-text text-muted mb-3">* Покупая билет, вы соглашаетесь с условиями <a class="text-muted" href="#">Оферты</a></small>
                <p class="text-center">
                  <button class="btn btn-lg btn-block btn-secondary" type="submit">Оплатить</button>
                </p>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
